<!-- Simple Section example -->
<section class="simple-section">
    <div class="page-width">
        <h1>Hello There!!!</h1>
        <h2>{{ section.settings.heading }}</h2>
        <p>{{ section.settings.text }}</p>
    </div>
</section>

{% schema %}
{
    "name" :    "Simple section",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Hello From my custom section"
        },
        {
            "type": "text",
            "id": "text",
            "label": "Text",
            "default": "This is the sample text"
        }
    ],
    "presets": [
        {
            "name": "Simple section"
        }
    ]
}
{%  endschema %}
